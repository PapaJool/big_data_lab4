pipeline {
    agent any

    stages {
        stage('Pull image') {
            steps {
                echo 'Updating docker image'
                sh 'docker pull papajool/big_data_lab3:latest'
            }
        }

        stage('Prepare environment') {
            steps {
                sh 'echo "CLICKHOUSE_HOST=clickhouse" > /var/jenkins_home/workspace/Lab3CD/.env'
                sh 'echo "CLICKHOUSE_PORT=8123" >> /var/jenkins_home/workspace/Lab3CD/.env'
                withCredentials([usernamePassword(credentialsId: 'vault-clickhouse', passwordVariable: 'CLICKHOUSE_PASSWORD', usernameVariable: 'CLICKHOUSE_USER')]) {
                    sh 'echo "CLICKHOUSE_USER=${CLICKHOUSE_USER}" >> /var/jenkins_home/workspace/Lab3CD/.env'
                    sh 'echo "CLICKHOUSE_PASSWORD=${CLICKHOUSE_PASSWORD}" >> /var/jenkins_home/workspace/Lab3CD/.env'
                }
            }
        }

        stage('Run container') {
            steps {
                sh 'curl https://raw.githubusercontent.com/PapaJool/big_data_lab3/main/docker-compose.yml -o docker-compose.yml'
                sh 'dir'
                sh 'docker compose up'
            }
        }
    }
    post {
        always {
            sh 'docker compose down'
            sh 'docker logout'
        }
    }
}
